<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.Controller">
   <center>
      <Pane fx:id="canvas" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin></Pane>
   </center>
   <bottom>
      <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Gravity: " />
            <TextField prefWidth="30.0" text="1" fx:id="txtGravity"/>
            <Button mnemonicParsing="false" text="Render" fx:id="btnRender"/>
            <Button mnemonicParsing="false" text="Pause" fx:id="btnPause"/>
            <Button mnemonicParsing="false" text="Restart" fx:id="btnRestart"/>
         </children>
      </HBox>
   </bottom>
</BorderPane>
